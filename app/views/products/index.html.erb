<h1>Products</h1>

<center>
  <% @types.each do |key, block| %>
  <h4><%= key %></h4>
    <table>
    <% block.length.times do |i| %>
      <% product = block[i] %>
      <% id = product['id'] %>
      <% img = product['image'] %>
      <% if i % 4 == 0 %>
        <% if i > 0 %>
      </tr>
        <% end %>

      <tr align=center>
      <% end %>
        <td><%= link_to image_tag("#{img}"), {:controller => "product", :action => "index", :id => id.to_s} %></td>
    <% end %>
      </tr>
    </table>
  <% end %>
</center>
