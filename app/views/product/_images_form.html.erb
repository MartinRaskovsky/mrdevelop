<%= form_for image do |f| %>
  <%= f.collection_radio_buttons(:name, @images, :image, :name) do |b|
  b.label { b.radio_button + image_tag(b.object.image.medium) }
  end %>
  <br>
  <input value="<%= params[:id] %>" type="hidden" name="product_id" id="product_id" />
  <%= f.submit "Select Image" %>
<% end %>
